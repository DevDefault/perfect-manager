<%- include('../../_header', { style: "products", title: "Produtos" }); %>
    <div class="container-fluid">
        <div class="row">
            <div class="mt-4">
                <h4>Produtos</h4>
            </div>

            <div class="form-floating col-6">
                <input type="text" class="form-control" placeholder="Pesquisar produto" id="searchProduct">
                <label for="searchProduct" class="ms-2">Buscar produto</label>
            </div>
            <div class="col-6 text-end">
                <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#newProduct"><i class='bx bx-add-to-queue'></i></button>
            </div>

            <div class="mt-4">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Qt.</th>
                            <th scope="col">Atualização</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>@mdo</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Jacob</td>
                            <td>Thornton</td>
                            <td>@fat</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td colspan="2">Larry the Bird</td>
                            <td>@twitter</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <!-- Modal Product-->
    <div class="modal fade" id="newProduct" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="newProduct" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Novo produto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="newProduct">
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="name" placeholder="Produto" required>
                            <label for="name">Produto</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="amout" placeholder="Quantidade" required>
                            <label for="amout">Quantidade</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="price" placeholder="Valor" required>
                            <label for="price">Valor</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="min_amout" placeholder="Quantidade mínima" required>
                            <label for="min_amout">Quantidade mínima</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('../../_footer', { script: "products" }); %>